<odoo>
    <record id="product_segment_view_tree" model="ir.ui.view">
        <field name="name">product.segment.tree</field>
        <field name="model">product.segment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_segment_view_form" model="ir.ui.view">
        <field name="name">product.segment.form</field>
        <field name="model">product.segment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_segment_action" model="ir.actions.act_window">
        <field name="name">Product Segments</field>
        <field name="res_model">product.segment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_segment"
              name="Product Segments"
              parent="crm.crm_menu_config"
              action="product_segment_action"
              sequence="10"/>
</odoo>